<div class="form-group row image-upload">
  <%= f.label label, '', class: "col-sm-3 col-form-label pt-2 pb-2 optional" %>
  <div class="col-sm-9 pt-2 pb-2">  
    <% if local_assigns[:video] %>
      <%= video_tag url.presence, class: "img" if url.present? %>
    <% else %>
      <%= image_tag url.presence, class: "img" if url.present? %>
    <% end %>
    <div class="mt-3">
      <%= f.file_field input, class: "img_btn", onchange: "readURL(this);" %>
    </div>
  </div>
</div>
